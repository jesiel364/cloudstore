<div class="row mt-4">
{{#each produtos}}

<div class="card mt-4 ms-4" style="width: 18rem;">
  <img src={{img}} class="card-img-top" alt="Camisa Preta">
  <div class="card-body">
    <h5 class="card-title">{{nome}}</h5>
    <p class="card-text">{{desc}}</p>
    <p class="card-text">R${{preco}}</p>
    <a href="#" class="btn btn-primary"><i class="fas fa-shopping-cart"></i> Adicionar ao Carrinho</a>
    <button type="button" class="btn btn-outline-secondary mt-2"><i class="fas fa-heart"></i> Favoritos</button>
  </div>
</div>


{{else}}

{{/each}}
</div>
